<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Action Show all sales documents related to a subscription -->
    <record id="sale_order_view_tree_subscription" model="ir.ui.view">
        <field name="name">sale.order.list.subscription</field>
        <field name="model">sale.order</field>
        <field name="arch" type="xml">
            <tree string="Sales Orders" decoration-bf="message_needaction==True" decoration-muted="state=='cancel'">
                <field name="message_needaction" invisible="1"/>
                <field name="name" string="Order Number"/>
                <field name="date_order"/>
                <field name="partner_id"/>
                <field name="user_id"/>
                <field name="subscription_management"/>
                <field name="amount_total" sum="Total Tax Included" widget="monetary"/>
                <field name="invoice_status"/>
                <field name="state" invisible="1"/>
           </tree>
        </field>
    </record>

    <!-- Subscriptions -->
    <record id="sale_subscription_view_search" model="ir.ui.view">
        <field name="name">sale.subscription.search</field>
        <field name="model">sale.subscription</field>
        <field name="arch" type="xml">
            <search string="Subscriptions">
                <field name="name" string="Subscription"/>
                <field name="date"/>
                <field name="partner_id" operator="child_of"/>
                <field name="user_id"/>
                <field name="template_id"/>
                <field name="code"/>
                <filter name="my_subscriptions" string="My Subscriptions" domain="[('user_id','=',uid)]"/>
                <filter string="Unassigned" name="contracts_not_assigned" help="Subscriptions that are not assigned to an account manager." domain="[('user_id', '=', False)]"/>
                <separator/>
                <filter name="open" string="In Progress" domain="[('in_progress','=',True)]" help="Subscriptions in progress"/>
                <filter name="pending" string="To Renew" domain="[('to_renew','=',True)]" help="Pending subscriptions"/>
                <filter name="closed" string="Closed" domain="[('in_progress','=',False)]" help="Closed subscriptions"/>
                <separator/>
                <filter
                    string="Expired"
                    name="expired"
                    domain="[('in_progress','=',True), '|', ('date', '!=', False), ('date', '&lt;=', time.strftime('%%Y-%%m-%%d'))]"
                    help="End date passed" />
                <filter
                    string="Expiring Next Month"
                    name="expiring_soon"
                    domain="[('date', '!=', False), ('date', '&lt;=', (context_today() + datetime.timedelta(30)).strftime('%%Y-%%m-%%d') )]"
                    help="End date is in the next month" />
                <separator/>
                <filter name="good" string="Good" domain="[('health', '=', 'done')]"/>
                <filter name="bad" string="Bad" domain="[('health', '=', 'bad')]"/>
                <separator/>
                <filter string="Late Activities" name="activities_overdue"
                    domain="[('activity_ids.date_deadline', '&lt;', context_today().strftime('%Y-%m-%d'))]"
                    help="Show all records which has next action date is before today"/>
                <filter string="Today Activities" name="activities_today"
                    domain="[('activity_ids.date_deadline', '=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter string="Future Activities" name="activities_upcoming_all"
                        domain="[('activity_ids.date_deadline', '&gt;', context_today().strftime('%Y-%m-%d'))
                        ]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Stage" name="stage" domain="[]" context="{'group_by':'stage_id'}"/>
                    <filter string="Salesperson" name="sales_person" domain="[]" context="{'group_by':'user_id'}"/>
                    <filter string="Customer" name="customer" domain="[]" context="{'group_by':'partner_id'}"/>
                    <filter string="Country" name="country" domain="[]" context="{'group_by': 'country_id'}"/>
                    <filter string="Industry" name="industry" domain="[]" context="{'group_by': 'industry_id'}"/>
                    <filter string="Template" name="template" domain="[]" context="{'group_by':'template_id'}"/>
                    <filter string="Start Date" name="start_month" domain="[]" context="{'group_by' : 'date_start'}" />
                    <filter string="End Date" name="end_month" domain="[]" context="{'group_by' : 'date'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="sale_subscription_view_cohort" model="ir.ui.view">
        <field name="name">sale.subscription.cohort</field>
        <field name="model">sale.subscription</field>
        <field name="arch" type="xml">
            <cohort string="Subscription" date_start="date_start" date_stop="date" interval="month" />
        </field>
    </record>


    <record id="sale_subscription_action" model="ir.actions.act_window">
        <field name="name">Subscriptions</field>
        <field name="res_model">sale.subscription</field>
        <field name="view_type">form</field>
        <field name="view_mode">kanban,tree,form,pivot,graph,cohort</field>
        <field name="context">{
            "group_by": "stage_id",
            "search_default_my_subscriptions":1
        }</field>
        <field name="domain">[]</field>
        <field name="search_view_id" eval='False'/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new subscription
            </p><p>
                Create subscriptions to manage recurring invoicing &amp; payments. Subscriptions can
                be either for an undefined or a limited period. In case of a limited period, it will
                be flagged as to renew one month before the end date.
            </p><p>
                Subscriptions can be automatically generated from sales orders of sales or eCommerce
                apps. To do so, set a subscription template on your subscription products.
            </p>
        </field>
    </record>

    <record id="sale_subscription_action_filtered" model="ir.actions.act_window">
        <field name="name">Subscriptions</field>
        <field name="res_model">sale.subscription</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form,kanban,pivot,graph</field>
        <field name="context">{
            'search_default_template_id': [active_id],
            'default_template_id': active_id,
        }
        </field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new subscription
            </p><p>
                Use subscriptions to follow tasks, issues, timesheets or invoicing based on
                work done, expenses and/or sales orders. Odoo will automatically manage
                the alerts for the renewal of the subscriptions to the right salesperson.
            </p>
        </field>
    </record>

    <record id="sale_subscription_action_pending" model="ir.actions.act_window">
        <field name="name">Subscriptions to Renew</field>
        <field name="res_model">sale.subscription</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form,pivot,graph,kanban,cohort</field>
        <field name="context">{
            'group_by': 'stage_id',
            'search_default_user_id':uid,
            'search_default_pending':1,
            'search_default_renew':1
        }</field>
        <field name="domain">[]</field>
        <field name="search_view_id" eval='False'/>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Define a new subscription
          </p><p>
            You will find here the subscriptions to be renewed because the
            end date is passed or the working effort is higher than the
            maximum authorized one.
          </p><p>
            Odoo automatically sets subscriptions to be renewed in a pending
            state. After the negociation, the salesman should close or renew
            pending subscriptions.
          </p>
        </field>
    </record>

    <record id="sale_subscription_view_graph" model="ir.ui.view">
        <field name="name">sale.subscription.graph</field>
        <field name="model">sale.subscription</field>
        <field name="arch" type="xml">
            <graph string="Subscriptions">
                <field name="partner_id"/>
                <field name="recurring_total" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="sale_subscription_view_pivot" model="ir.ui.view">
        <field name="name">sale.subscription.pivot</field>
        <field name="model">sale.subscription</field>
        <field name="arch" type="xml">
            <pivot string="Subscriptions">
                <field name="partner_id"/>
                <field name="recurring_total" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="sale_subscription_view_form" model="ir.ui.view">
        <field name="name">sale.subscription.form.view</field>
        <field name="model">sale.subscription</field>
        <field name="arch" type="xml">
            <form string="Subscription" class="o_subscription_form">
                <header>
                    <button string="Create A Renewal Quotation" help="Create a sale order that will overwrite this subscription when confirmed (renewal quotation)" name="prepare_renewal_order" type="object"/>
                    <button string="Upsell" help="Add options to the subscription directly or through a quotation" name="%(sale_subscription.wizard_action)d" type="action"/>
                    <field name="stage_id" widget="statusbar" options="{'clickable': '1'}"/>
                </header>
                <sheet string="Subscription">
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button"
                            icon="fa-globe"
                            name="open_website_url"
                            type="object"
                            string="Online Preview">
                            </button>
                        <button class="oe_stat_button"
                            icon="fa-book"
                            name="action_subscription_invoice"
                            type="object">
                            <field name="invoice_count" widget="statinfo" string="Invoices"/>
                        </button>
                        <button class="oe_stat_button"
                            icon="fa-credit-card"
                            name="action_open_sales"
                            type="object">
                            <field name="sale_order_count" widget="statinfo" string="Sales"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <span class="badge badge-warning float-right border-0" attrs="{'invisible': [('to_renew', '=', False)]}">
                                To Renew
                            </span>
                            <field name="starred" widget="boolean_favorite" class="mr-3" nolabel="1"/>
                            <field name="display_name"/>
                            <field name="health" widget="state_selection" class="ml-3" readonly="1"/>
                        </h1>
                    </div>
                    <group name="main">
                        <group>
                            <field name="partner_id" required="1"/>
                            <field name="pricelist_id" groups="product.group_sale_pricelist"/>
                            <field name="code"/>
                            <field name="date_start"/>
                            <field name="to_renew"/>
                            <field name="in_progress" invisible="1"/>
                        </group>
                        <group>
                            <field name="template_id"/>
                            <field name="user_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="currency_id" invisible="1"/>
                            <label for="recurring_next_date" string="Date of Next Invoice"/>
                            <div>
                                <field name="recurring_next_date"/>
                                <button string="&#8658; Generate Invoice" class="oe_link" name="recurring_invoice"
                                        type="object" attrs="{'invisible': [('payment_mode', '!=', 'manual')]}"/>
                                <button string="&#8658; Generate Invoice" class="oe_link" name="recurring_invoice"
                                        type="object" attrs="{'invisible': [('payment_mode', '==', 'manual')]}" groups="base.group_no_one"/>
                            </div>
                            <field name="recurring_rule_boundary" invisible="1"/>
                            <field name="date" attrs="{'invisible':[('recurring_rule_boundary','=','unlimited')]}"/>
                            <field name="close_reason_id" attrs="{'invisible': [('in_progress', '=', True)]}"/>
                        </group>
                    </group>
                    <div>
                        <notebook>
                            <page string="Subscription Lines" id="lines">
                                <div>
                                    <field name="recurring_invoice_line_ids">
                                        <tree editable="bottom">
                                            <field name="product_id" domain="[('recurring_invoice', '=', True)]" context="{'default_recurring_invoice': True}"/>
                                            <field name="name"/>
                                            <field name="quantity"/>
                                            <field name="uom_id" groups="product.group_uom"/>
                                            <field name="price_unit"/>
                                            <field name="discount" groups="sale.group_discount_per_so_line"/>
                                            <field name="price_subtotal"/>
                                        </tree>
                                    </field>
                                    <group class="oe_subtotal_footer oe_right">
                                        <field name="recurring_total" class="oe_subtotal_footer_separator"
                                            widget="monetary" options="{'currency_field': 'currency_id'}"
                                            modifiers="{'readonly': true}"
                                        />
                                    </group>
                                </div>
                            </page>
                            <page string="Settings" id="settings">
                                <group>
                                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                    <field name="analytic_account_id" groups="analytic.group_analytic_accounting"/>
                                    <field name="payment_mode" invisible="1"/>
                                    <field name="payment_token_id" attrs="{'invisible': [('payment_mode', 'in', ['manual', 'draft_invoice'])]}"/>
                                </group>
                            </page>
                        </notebook>
                    </div>
                    <div name="description">
                        <field name="description" placeholder="Terms and Conditions"/>
                    </div>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="sale_subscription_view_list" model="ir.ui.view">
        <field name="name">sale.subscription.list</field>
        <field name="model">sale.subscription</field>
        <field name="groups_id" eval="[(4, ref('account.group_account_invoice'))]"/>
        <field name="arch" type="xml">
            <tree string="Sale Subscriptions" decoration-warning="to_renew" decoration-muted="not in_progress">
                <field name="code"/>
                <field name="partner_id"/>
                <field name="recurring_next_date"/>
                <field name="pricelist_id" invisible="1"/>
                <field name="user_id"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="recurring_total"/>
                <field name="percentage_satisfaction"/>
                <field name="stage_id"/>
                <field name="to_renew" invisible="1"/>
                <field name="in_progress" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="sale_subscription_template_view_kanban" model="ir.ui.view">
        <field name="name">sale.subscription.template.kanban</field>
        <field name="model">sale.subscription.template</field>
        <field name="arch" type="xml">
            <kanban class="oe_background_grey o_kanban_dashboard o_subscription_kanban">
                <field name="name"/>
                <field name="code"/>
                <field name="recurring_rule_type"/>
                <field name="recurring_interval"/>
                <field name="color"/>
                <field name="subscription_count"/>
                <field name="payment_mode"/>
                <field name="user_closable"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="#{kanban_color(record.color.raw_value)} oe_kanban_global_click">
                            <span class="oe_kanban_color_help" t-attf-title="In #{kanban_getcolorname(record.color.raw_value)}" role="img" t-attf-aria-label="In #{kanban_getcolorname(record.color.raw_value)}"/>
                            <div class="o_subscription_kanban_main">
                                <div class="o_kanban_card_content">
                                    <div class="o_kanban_primary_left">
                                        <h3 class="mt0">
                                            <strong><t t-if="record.code.value"><t t-esc="record.code.value"/> - </t><t t-esc="record.name.value"/></strong>
                                        </h3>
                                        <div>Recurrence: <t t-esc="record.recurring_interval.value"/>&amp;nbsp;<t t-esc="record.recurring_rule_type.value"/></div>
                                        <div><i class="fa fa-check" /> <t t-esc="record.payment_mode.value"/></div>
                                        <div t-if="record.user_closable.raw_value"><i class="fa fa-check" /> Closable by customer</div>
                                    </div>
                                </div><div class="o_kanban_card_manage_pane dropdown-menu" role="menu">
                                    <div class="o_kanban_card_manage_section o_kanban_manage_reports">
                                        <div role="menuitem">
                                            <a type="edit">Settings</a>
                                        </div>
                                        <div role="menuitem">
                                            <a name="%(sale_subscription_action_filtered)d" type="action">Subscriptions</a>
                                        </div>
                                    </div>
                                    <div role="menuitem" aria-haspopup="true" t-if="widget.editable" class="o_subscription_kanban_colorpicker">
                                        <ul role="menu" class="oe_kanban_colorpicker" data-field="color"/>
                                    </div>
                                </div>
                                <div class="o_subscription_kanban_manage">
                                    <a class="o_kanban_manage_toggle_button" href="#"><i class="fa fa-ellipsis-v" role="img" aria-label="Manage" title="Manage"/></a>
                                </div>
                            </div>
                            <div class="ml16">
                                <a name="%(sale_subscription_action_filtered)d" type="action">
                                    <span><t t-esc="record.subscription_count.value"/></span>
                                    <span>Subscriptions</span>
                                </a>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Subscriptions templates -->
    <record id="sale_subscription_template_view_list" model="ir.ui.view">
        <field name="name">sale.subscription.template.list</field>
        <field name="model">sale.subscription.template</field>
        <field name="arch" type="xml">
            <tree toolbar="1" string="Subscription Templates">
                <field name="code"/>
                <field name="name"/>
                <field name="recurring_rule_type"/>
            </tree>
        </field>
    </record>

    <record id="sale_subscription_template_view_search" model="ir.ui.view">
        <field name="name">sale.subscription.template.search</field>
        <field name="model">sale.subscription.template</field>
        <field name="arch" type="xml">
            <search string="Subscription Templates">
                <field name="name" filter_domain="['|', ('name','ilike',self),('code','ilike',self)]" string="Template"/>
                <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
            </search>
        </field>
    </record>

    <record id="sale_subscription_template_view_form" model="ir.ui.view">
        <field name="name">sale.subscription.form.view</field>
        <field name="model">sale.subscription.template</field>
        <field name="arch" type="xml">
            <form string="Subscription">
                <sheet string="Subscription">
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button"
                            icon="fa-book"
                            name="%(product_template_action_subscription)d"
                            type="action">
                            <field name="product_count" widget="statinfo" string="Products"/>
                        </button>
                        <button class="oe_stat_button"
                            icon="fa-book"
                            name="%(sale_subscription_action)d"
                            context="{'search_default_template_id': [active_id], 'default_template_id': active_id}"
                            type="action">
                            <field name="subscription_count" widget="statinfo" string="Subscriptions"/>
                        </button>
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Template Name"/>
                        </h1>
                    </div>
                    <group name="main">
                        <group>
                            <field name="code"/>
                        </group>
                        <group name="website_subscription">
                        </group>
                    </group>
                    <group name="config">
                        <group  name="invoicing" string="Invoicing">
                            <label for="recurring_interval" string="Recurrence"/>
                            <div class="o_row">
                                <field name="recurring_interval" required="1"/>
                                <field name="recurring_rule_type" class="field_rule_type" required="1"/>
                            </div>
                            <field name="recurring_rule_boundary" widget="radio" options="{'horizontal':true}"/>
                            <label string="End After" attrs="{'invisible': [('recurring_rule_boundary','=','unlimited')]}" for="recurring_rule_count"/>
                            <div class="o_row" attrs="{'invisible': [('recurring_rule_boundary','=','unlimited')]}">
                                <field name="recurring_rule_count"/>
                                <field name="recurring_rule_type_readonly"/>
                            </div>
                            <field name="payment_mode"/>
                            <field name="invoice_mail_template_id"
                                   attrs="{'invisible': [('payment_mode', 'not in', ['validate_send', 'validate_send_payment'])],
                                           'required': [('payment_mode', 'in', ['validate_send', 'validate_send_payment'])]}"/>
                        </group>
                        <group name="online" string="Online Management">
                            <field name="user_closable"/>
                            <field name="auto_close_limit" attrs="{'invisible': [('payment_mode', 'in', ['manual', 'draft_invoice'])]}"/>
                            <field name="tag_ids" string="Category" widget="many2many_tags"
                                   options="{'color_field': 'color'}" />
                        </group>
                        <group name="accounting">
                            <field name="journal_id" string="Journal" options="{'no_create': True}" groups="account.group_account_manager"/>
                        </group>
                    </group>
                    <group name="metrics" string="Metrics">
                      <field name="good_health_domain" widget="domain" options="{'model': 'sale.subscription', 'in_dialog': True}"/>
                      <field name="bad_health_domain" widget="domain" options="{'model': 'sale.subscription', 'in_dialog': True}"/>
                    </group>
                    <div name="description">
                        <label for="description"/>
                        <field name="description" placeholder="Terms and Conditions"/>
                    </div>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="sale_subscription_view_kanban" model="ir.ui.view">
        <field name="name">sale.subscription.kanban</field>
        <field name="model">sale.subscription</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="display_name"/>
                <field name="stage_id"/>
                <field name="starred"/>
                <field name="recurring_total"/>
                <field name="template_id"/>
                <field name="currency_id"/>
                <field name="activity_ids"/>
                <field name="health"/>
                <field name="to_renew"/>
                <field name="rating_ids"/>
                <progressbar field="health" colors='{"good": "success", "bad": "danger"}'/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="display_name"/>
                                        </strong>
                                    </div>
                                    <strong class="float-right text-right">
                                      <field name="recurring_total" widget="monetary"/>
                                    </strong>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="row">
                                        <div class="col-8 text-muted">
                                            <field name="template_id"/>
                                        </div>
                                        <div class="col-4 text-right">
                                            <span t-if="record.to_renew.raw_value" class="badge badge-warning border-0">
                                                To Renew
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="starred" widget="boolean_favorite" nolabel="1" force_save="1" />
                                        <field name="activity_ids" widget="kanban_activity"/>
                                        <b t-if="record.rating_ids.raw_value.length">
                                            <span style="font-weight:bold;" class="fa fa-fw mt4 fa-smile-o text-success" t-if="record.rating_last_value.value == 10" title="Latest Rating: Satisfied" role="img" aria-label="Happy face"/>
                                            <span style="font-weight:bold;" class="fa fa-fw mt4 fa-meh-o text-warning" t-if="record.rating_last_value.value == 5" title="Latest Rating: Not Satisfied" role="img" aria-label="Neutral face"/>
                                            <span style="font-weight:bold;" class="fa fa-fw mt4 fa-frown-o text-danger" t-if="record.rating_last_value.value == 1" title="Latest Rating: Higly Dissatisfied" role="img" aria-label="Sad face"/>
                                        </b>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="health" widget="state_selection" readonly="1"/>
                                    </div>
                                </div>
                            </div>
                            <div class="oe_clear"></div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

