<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="price_list_temp">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <page>
                    <div class="oe_structure"/>
                    <div class="row">
                    <center>
                        <b>
                            <h2> Surgical Product Solutions </h2>
                            <h4> Product Price List </h4>
                        </b>
                    </center>
                    <!--<center>
                        <b>
                            <span t-esc="start_date"/>
                            To
                            <span t-esc="end_date"/>
                        </b>
                    </center>-->
                    </div>
                    <br/>
                    <t t-foreach="data.keys()" t-as="user">
                       <!-- <center>
                            <b>
                                <span>Sale Person :</span>
                                <span t-esc="user"/>
                            </b>
                        </center>-->
                        <t t-set="total_sum" t-value="0"/>
                        <div class="table-responsive">
                        <table class="table table-condensed" style="border: 1px solid black;">
                            <thead>
                                <tr style="border: 1px solid black;">
                                    <th style="border: 1px solid black;text-align:  center !important;width:200px;"> Product SKU</th>
                                    <th style="border: 1px solid black;text-align:  center !important;"> Product Name</th>
                                    <th style="border: 1px solid black;text-align:  center !important;">Cost</th>

                                </tr>
                                <tr t-foreach="data[user]" t-as="order">
                                    <td style="border: 1px solid black;">
                                        <span t-esc="order[0]"/>
                                    </td>
                                    <td style="border: 1px solid black;">
                                        <span t-esc="order[1]"/>
                                    </td>
                                    <td align="right" style="border: 1px solid black;">
                                       $ <span t-esc="order[2]"/>
                                    </td>
                                </tr>
                            </thead>
                        </table>
                        </div>
                    </t>
                </page>
            </t>
        </t>
    </template>


