<odoo>
  <data>


     <record id="sr_sale_salesbymonth_report_form_view11" model="ir.ui.view">
            <field name="name">sr.sale.salesperson.report.form.view</field>
            <field name="model">lot_history.lot_history</field>
            <field name="arch" type="xml">
                <form string="Lot History Report">
                    <group>
                        <group>
                            <field name="start_date"/>
                            <field name="product_id" widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="end_date"/>
                        </group>
                    </group>

                    <footer>
                        <button name="get_report_values" string="View Report" class="oe_highlight"
                                type="object" />

                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>


            </field>
        </record>



     <record id="open_top_sales_action1" model="ir.actions.act_window">
            <field name="name">Lot History Report </field>
            <field name="res_model">lot_history.lot_history</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    <menuitem id="purchase_history_report"
            action="open_top_sales_action1"
            name="Lot History"
            parent="stock.menu_warehouse_report"
            sequence="4"/>
  </data>
</odoo>