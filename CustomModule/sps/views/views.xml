      <record id="action_sps_customer" model="ir.actions.act_window">
            <field name="name">Create Customer</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a contact in your contacts directory.
              </p><p>
                Odoo helps you easily track all activities related to
                a customer: discussions, history of business opportunities,
                documents, etc.
              </p>
            </field>
      </record>

      <record id="product_form_ex" model="ir.ui.view">
            <field name="name">product.product.form_ex</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <page name="general_information" position="inside">
                    <group name="Category" string="Category">
                        <group>
                              <field name="class_code"/>
                              <field name="location"/>
                        </group>
                        <group>
                             <field name="tier"/>
                         </group>
                     </group>
                </page>
            </field>
        </record>

      <record id="view_order_form_ex" model="ir.ui.view">
            <field name="name">sale.order.form_ex</field>
            <field name="model">sale.order</field>
             <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                  <button name="action_cancel" position="after" >
                         <button name="action_void" string="Voided" type="object" states="draft,sent,sale"/>
                 </button>
            </field>
        </record>

    <!-- Top menu item -->
    <menuitem name="Prioritization Engine" id="sps.menu_root"/>
    <!-- menu categories -->
    <menuitem name="Customer" id="sps.prioritization_cmenu" parent="sps.menu_root"/>
    <!-- actions -->
    <menuitem name="Customer" id="sps.prioritization_cust_menu" parent="sps.prioritization_cmenu"
              action="action_sps_customer"/>

      <!-- menu categories -->
    <menuitem name="Product" id="sps.prioritization_pmenu" parent="sps.menu_root"/>
    <!-- actions -->
    <menuitem name="Product" id="sps.prioritization_pro_menu" parent="sps.prioritization_pmenu"
              action="product.product_template_action"/>

         <!-- menu categories -->
    <menuitem name="Import Document" id="sps.prioritization_imenu" parent="sps.menu_root"/>
    <!-- actions -->
    <menuitem name="Import Document" id="sps.prioritization_import_menu" parent="sps.prioritization_imenu"
              action="action_sps_customer"/>
  </data>
