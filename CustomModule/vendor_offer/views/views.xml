<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="vendor_offer.list">
      <field name="name">purchase.order list</field>
      <field name="model">purchase.order</field>
      <field name="arch" type="xml">
        <tree>
          <field name="appraisal_no"/>
          <field name="acq_user_id" string='Acq Manager'/>
          <field name="facility"/>
          <field name="offer_amount"/>
          <field name="retail_amt"/>
          <field name="date_offered"/>
          <field name="revision"/>
        </tree>
      </field>
    </record>

    <record id="view_vendor_offer_form" model="ir.ui.view">
            <field name="name">purchase.order.form</field>
            <field name="model">purchase.order</field>
            <field name="arch" type="xml">
                <form string="Sales Order" class="o_sale_order">
                <header>
                    <button name="action_send_offer_email" string="Send Offer by Email" type="object"  class="btn-primary"/>
                    <button name="action_print_vendor_offer" string="Print Vendor Offer" type="object"  class="btn-primary"/>
                    <button name="action_confirm_vendor_offer" string="Confirm Order" type="object"  />
                    <button name="action_cancel_vendor_offer" string="Cancel" type="object"  />
                     <field name="state" widget="statusbar" statusbar_visible="ven_draft,ven_sent,purchase" readonly="1"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_send_offer_email"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-archive" string="Active">
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                           <label string="Vendor Offer"/>
                           <label string="New"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id"  string='Facility Name'/>
                            <field name="acq_user_id" />
                            <field name="possible_competition" />
                            <field name="accelerator" />
                            <field name="priority" />
                            <field name="max" />
                        </group>
                        <group>
                            <field name="date_offered" string="Offer Date"/>
                            <field name="appraisal_no" />
                            <field name="accepted_date" />
                            <field name="declined_date" />
                            <field name="offer_type" />
                            <field name="new_customer" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Products">
                            <field name="products" mode="tree,kanban">
                                            <form >
                                                <group>
                                                    <group>
                                                         <field name="product_id" />
                                                         <field name="name" />
                                                         <field name="product_tier" />
                                                         <field name="product_sales_count" />
                                                         <field name="product_sales_count_90" />
                                                         <field name="product_sales_count_yrs" />
                                                    </group>
                                                     <group>
                                                         <field name="qty_in_stock" />
                                                         <field name="expired_inventory" />
                                                         <field name="multiplier" />

                                                     </group>
                                                </group>
                                            </form>
                                <tree  editable="bottom" >
                                                         <field name="product_id" />
                                                         <field name="price_unit" />
                                                         <field name="product_qty"  invisible="1" />
                                                         <field name="date_planned"  invisible="1" />
                                                         <field name="product_uom"  invisible="1" />
                                                         <field name="order_id"  invisible="1" />

                                                         <field name="manufacturer" />
                                                         <field name="name" />
                                                         <field name="product_tier" />
                                                         <field name="product_sales_count" />
                                                         <field name="product_sales_count_90" />
                                                         <field name="product_sales_count_yrs" />
                                                         <field name="qty_in_stock" />
                                                         <field name="expired_inventory" />
                                                         <field name="multiplier" />
                                                         <field name="offer_price" />
                                                         <field name="margin" />

                                </tree>

                            </field>
                             <group class="oe_subtotal_footer oe_right">
                                <!--<field name="total_retail" widget="monetary" />-->
                                <!--<field name="total_offer" widget="monetary" />-->
                                <!--<div class="oe_subtotal_footer_separator oe_inline">-->
                                    <!--<label for="amount_total"/>-->
                                <!--</div>-->
                                <!--<field name="amount_total" nolabel="1" class="oe_subtotal_footer_separator" widget="monetary" />-->
                            </group>
                            <field name="notes" class="oe_inline" placeholder="Define your terms and conditions ..."/>
                            <div class="oe_clear"/>
                        </page>
                        <page string="Deliveries">
                            <group>
                                <group  >
                                        <field name="shipping_label_issued" />
                                </group>
                            </group>
                        </page>
                         <page string="Notes">
                            <group>
                                <group  >
                                        <!--<field name="notes_desc" />-->
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">

                </div>
                </form>
            </field>
        </record>

         <!--<record id="purchase_order_form_vendor" model="ir.ui.view">-->
