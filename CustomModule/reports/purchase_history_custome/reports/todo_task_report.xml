<odoo>

    <report id="action_todo_model_report"
            string="Purchase History"
            model="purchase.history.cust"
            report_type="qweb-html"
            file="purchase_history_custome.purchase_report"
            name="purchase_history_custome.purchase_report"
    />

    <template id="purchase_report">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <page>
                    <div class="oe_structure"/>
                    <div class="row">

                        <center>
                            <b>
                                <h4>Surgical Product Solutions</h4>
                            </b>
                            <b>
                                <h2>Purchase History Report</h2>
                            </b>
                        </center>
                        <center>
                            <b>Date Range:
                                <span t-esc="start_date"/>

                                -

                                <span t-esc="end_date"/>
                            </b>
                        </center>
                        <!-- Report page content -->

                        <div class="table-responsive">
                            <table class="table table-condensed table-bordered" style="border: 1px solid #000;">
                                <tr>
                                    <th style="border: 1px solid black;text-align: center;">Customer</th>
                                    <th style="border: 1px solid black;text-align: center;">Manufacturer</th>
                                    <th style="border: 1px solid black;text-align: center;">Product</th>
                                    <th style="border: 1px solid black;text-align: center;width: 220px;">Product Name</th>
                                    <th style="border: 1px solid black;text-align: center;">Qty</th>
                                    <th style="border: 1px solid black;text-align: center;">Price Per Stock</th>
                                    <th style="border: 1px solid black;text-align: center;">Min Exp Date</th>
                                    <th style="border: 1px solid black;text-align: center;">Max Exp Date</th>
                                </tr>

                                <t t-foreach="data.keys()" t-as="user">
                                    <t t-foreach="data[user]" t-as="o">
                                        <tr>
                                            <td class="col-xs-2" style="border: 1px solid #000;">
                                                <span t-esc="o[0]"/>
                                            </td>
                                            <td class="col-xs-2" style="border: 1px solid #000;">
                                                <span t-esc="o[0]"/>
                                            </td>
                                            <td class="col-xs-2" style="border: 1px solid #000;">
                                                <span t-esc="o[1]"/>
                                            </td>
                                            <td class="col-xs-2" style="white-space: nowrap;border: 1px solid #000;">
                                                <span t-esc="o[9]"/>
                                            </td>
                                            <td align="right" class="col-xs-2" style="border: 1px solid #000;">
                                                <span t-esc="o[4]"/>
                                            </td>
                                            <td align="right" class="col-xs-2" style="border: 1px solid #000;">$
                                                <span t-esc="o[6]"/>
                                            </td>
                                            <td align="center" class="col-xs-2" style="border: 1px solid #000;">
                                                <span t-esc="o[10]"/>
                                            </td>
                                            <td align="center" class="col-xs-2" style="border: 1px solid #000;">
                                                <span t-esc="o[11]"/>
                                            </td>
                                        </tr>
                                    </t>
                                </t>
                            </table>
                        </div>
                    </div>
                </page>
            </t>
        </t>
    </template>

</odoo>
