<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="salesbymonth_temp">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <page>
                    <div class="oe_structure"/>
                    <div class="row">
                    <center>
                        <b>
                            <h2> Surgical Product Solutions </h2>
                            <h4> Sales By Month </h4>
                        </b>
                    </center>
                    <center>
                       Date Range: <b>
                            <span t-esc="start_date"/>
                            -
                             <span t-esc="end_date"/>
                        </b>
                    </center>
                    </div>
                    <br/>
                    <t t-foreach="data.keys()" t-as="user">

                        <t t-set="total_sum" t-value="0"/>
                        <div class="table-responsive">
                        <table class="table table-condensed" style="border: 1px solid black;">
                            <thead>
                                <tr style="border: 1px solid black;">
                                    <th style="border: 1px solid black;text-align: center;">Product SKU</th>
                                    <th style="border: 1px solid black;text-align: center;">Product Name</th>
                                    <th style="border: 1px solid black;text-align: center;">Price</th>
                                     <th style="border: 1px solid black;text-align: center;">Quantity</th>
                                </tr>
                                <tr t-foreach="data[user]" t-as="order">

                                    <td style="border: 1px solid black;">
                                        <span t-esc="order[0]"/>
                                    </td>
                                    <td style="border: 1px solid black;">
                                         <span t-esc="order[1]"/>
                                    </td>
                                    <td align="center" style="border: 1px solid black;text-align: right;">
                                       $ <span t-esc="order[2]"/>
                                    </td>
                                    <td align="right" style="border: 1px solid black;">
                                          <span t-esc="order[3]"/>
                                    </td>
                                </tr>

                            </thead>
                        </table>
                        </div>
                    </t>
                </page>

            </t>
        </t>
    </template>
</odoo>