<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="report_products_purchase">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="web.internal_layout">
                <div class="page">
                    <div style="text-align: center;">
                    	<span style="font-size: 25px;"> Purchase Receiving Report </span>
                    </div>

                    <div class="row mt32 mb32">
                        <div class="col-xs-4">
                            <p>
                                <t t-if="docs.start_date"><strong>Start Date :</strong> <span t-esc="docs.start_date"/><br/></t>
                                <t t-if="docs.end_date"><strong>End Date :</strong> <span t-esc="docs.end_date"/></t>
                            </p>
                        </div>
                    </div>

                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th>Purchase Order</th>
                                <th>Order Name</th>
                                <th>Status</th>
                                <th>Type</th>
                                <th>Product</th>
                                <th>Qty To Receive</th>
                                <th>Qty Received</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="products" t-as="a">
                                <td>
                                    <span t-esc="a['order_id']" />
                                </td>
                                 <td>
                                    <span t-esc="a['order_name']" />
                                </td>
                                <td>
                                    <span t-esc="a['state']" />
                                </td>
                                <td>
                                    <span t-esc="a['type']"/>
                                </td>
                                 <td>
                                    <span t-esc="a['p_name']" />
                                </td>
                                <td class="text-middle">
                                    <span t-esc="a['to_qty']" />
                                </td>
                                <td class="text-middle" >
                                    <span t-esc="a['received']" />
                                </td>

                            </tr>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </t>
</template>
</odoo>
