<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="report_products">
    <t t-call="web.html_container">
            <t t-call="web.internal_layout">
                <page>
                    <div class="oe_structure"/>
                    <div class="row">
                    <center>
                        <b>
                            <h2> Surgical Product Solutions </h2>
                            <h4> Total Product Sales </h4>
                        </b>
                    </center>
                    <center>
                        <b>
                            <span t-esc="docs.start_date"/>
                            -
                            <span t-esc="docs.end_date"/>
                        </b>
                    </center>
                    </div>
                    <br/>
                        <table class="table table-condensed" style="border: 1px solid black;">
                            <thead>
                                <tr style="border: 1px solid black;">
                                    <th style="border: 1px solid black;">Products</th>
                                    <th style="border: 1px solid black;">Total Quantity</th>
                                    <th style="border: 1px solid black;">Total Amount</th>

                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="products" t-as="a">
                                    <td style="border: 1px solid black;">
                                        <span t-esc="a['name']" />
                                    </td>
                                    <td class="text-right" style="border: 1px solid black;">
                                        <span t-esc="a['qty']" />
                                    </td>
                                    <td class="text-right" style="border: 1px solid black;">
                                      $ <span t-esc="a['sale_amt']" />
                                    </td>

                                </tr>
                            </tbody>
                        </table>
                </page>
            </t>
    </t>
</template>
</odoo>
