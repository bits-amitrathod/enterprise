<odoo>

    <report id="action_todo_model_report"
            string="Adjustment Report "
            model="inventory.adjustment.report"
            report_type="qweb-html"
            file="inventory_adjustment_report.adjustment_report1"
            name="inventory_adjustment_report.adjustment_report1"
    />

    <template id="adjustment_report1">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <center>
                           <b>
                            <h4>Surgical Product Solutions</h4>
                        </b>
                        <b>
                            <h2>Inventory Adjustment Report</h2>
                        </b>
                    </center>
                    <!-- Report page content -->
                    <table class="table table-stripped">
                        <tr>
                            <th>Product</th>
                            <th>Inventory Date</th>
                            <th>Date Posted</th>
                            <th>Type</th>
                            <th>Qty</th>
                            <th>Amount</th>
                            <th>Total Amount</th>

                        </tr>

                        <t t-foreach="data.keys()" t-as="user">
                            <t t-foreach="data[user]" t-as="o">
                                <tr>
                                    <td class="col-xs-2">
                                        <span t-esc="o[0]"/>
                                    </td>

                                    <td class="col-xs-2">
                                        <span t-esc="o[1]"/>
                                    </td>

                                    <td class="col-xs-2">
                                        <span t-esc="o[1]"/>
                                    </td>

                                    <td class="col-xs-2">
                                        <span t-esc="o[2]"/>
                                    </td>

                                    <td class="col-xs-2">
                                        <span t-esc="o[3]"/>
                                    </td>

                                    <!--<td class="col-xs-2">-->
                                        <!--<span t-esc="o[1]"/>-->
                                    <!--</td>-->
                                </tr>
                            </t>

                        </t>

                    </table>


                </div>
            </t>
        </t>
    </template>

</odoo>
