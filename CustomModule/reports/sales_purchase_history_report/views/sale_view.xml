<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sr_sale_purchase_report_form_view" model="ir.ui.view">
            <field name="name">sale.purchase.history.report.form.view</field>
            <field name="model">sale.purchase.history.report</field>
            <field name="arch" type="xml">
                <form string="Purchase History">
                    <group>
                        <group>
                            <field name="start_date"/>
                            <field name="product_id" widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="end_date"/>

                        </group>
                    </group>

                    <footer>
                        <button name="print_purchase_history_vise_report" string="Print Report" class="oe_highlight"
                                type="object"/>
                        Or
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>


            </field>
        </record>

        <record id="action_sale_report_purchase_wizard" model="ir.actions.act_window">
            <field name="name">Purchase History</field>
            <field name="res_model">sale.purchase.history.report</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_sale_report_purchase_wizard"
                  name="Purchase History"
                  action="action_sale_report_purchase_wizard"
                  parent="sale.menu_sale_report"
                  sequence="1"/>
    </data>
</odoo>
