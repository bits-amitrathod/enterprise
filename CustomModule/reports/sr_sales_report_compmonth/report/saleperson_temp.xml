<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="salesbymonth_temp">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <page>
                    <div class="oe_structure"/>
                    <div class="row">
                    <center>
                        <b>
                            <h2> Surgical Product Solutions </h2>
                            <h4>Compare Sales By Month</h4>
                        </b>
                    </center>
                    </div>
                    <br/>
                    <div class="table-responsive">
                    <table class="table table-condensed" style="border: 1px solid black;">
                            <thead>
                                <tr style="border: 0px;">
                                    <th style="border: 0px;"></th>
                                    <th style="border: 0px;"></th>
                                    <th align="center" colspan="2" style="border: 0px;text-align: center;"> <span t-esc="last_start_date"/> - <span t-esc="last_end_date"/> </th>
                                    <th align="center" colspan="2" style="border: 0px;text-align: center;"> <span t-esc="current_start_date"/> - <span t-esc="current_end_date"/> </th>
                                </tr>

                                <tr align="center" style="border: 1px solid black;">
                                    <th style="border: 1px solid black;text-align: center;">Product SKU </th>
                                    <th style="border: 1px solid black;text-align: center;">Product Name </th>
                                    <th style="border: 1px solid black;text-align: center;">Last Month Qty</th>
                                    <th style="border: 1px solid black;text-align: center;">Last Month Price</th>
                                    <th style="border: 1px solid black;text-align: center;">Current Month Qty</th>
                                    <th style="border: 1px solid black;text-align: center;">Current Month Price</th>
                                </tr>
                                    <tr t-foreach="data" t-as="order">
                                        <td style="border: 1px solid black;">
                                            <span t-esc="order[5]"/>
                                        </td>
                                        <td style="border: 1px solid black;">
                                            <span t-esc="order[0]"/>
                                        </td>
                                         <td align="right" style="border: 1px solid black;">
                                            <span t-esc="order[3]"/>
                                        </td>
                                        <td align="right" style="border: 1px solid black;">
                                            $ <span t-esc="order[4]"/>
                                        </td>

                                        <td align="right" style="border: 1px solid black;">
                                            <span t-esc="order[1]"/>
                                        </td>
                                        <td align="right" style="border: 1px solid black;">
                                            $ <span t-esc="order[2]"/>
                                        </td>
                                    </tr>
                            </thead>
                    </table>
                    </div>
                </page>
            </t>
        </t>
    </template>
</odoo>