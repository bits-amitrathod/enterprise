            <field name="model_id" ref="model_sale_compbymonth_report"/>
            <field name="state">code</field>
            <field name="code">
                 model.print_compbymonth_vise_report()
            </field>
        </record>-->


        <menuitem id="sr_menu_sale_report_salesperson_wizard"
                  name="Sales Report Compare By Month"
                  action="sr_action_sale_report_compmonth_wizard"
                  parent="sale.menu_sale_report"
                  sequence="1"/>
    </data>
</odoo>
